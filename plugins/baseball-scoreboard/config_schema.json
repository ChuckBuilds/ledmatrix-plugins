{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Baseball Scoreboard Plugin Configuration",
  "description": "Configuration schema for the Baseball Scoreboard plugin",
  "type": "object",
  "properties": {
    "enabled": {
      "type": "boolean",
      "default": true,
      "description": "Enable or disable the baseball scoreboard plugin"
    },
    "display_duration": {
      "type": "number",
      "default": 15,
      "minimum": 5,
      "maximum": 60,
      "description": "Duration in seconds to display each game"
    },
    "show_records": {
      "type": "boolean",
      "default": false,
      "description": "Show team records (wins-losses)"
    },
    "show_ranking": {
      "type": "boolean",
      "default": false,
      "description": "Show team rankings (when available)"
    },
    "update_interval_seconds": {
      "type": "integer",
      "default": 60,
      "minimum": 30,
      "maximum": 300,
      "description": "How often to fetch new data (seconds)"
    },
    "mlb": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable MLB games"
        },
        "favorite_teams": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[A-Z]{2,3}$",
            "description": "MLB team abbreviation (e.g., 'NYY', 'BOS')"
          },
          "uniqueItems": true,
          "maxItems": 30,
          "description": "List of favorite MLB teams to prioritize"
        },
        "display_modes": {
          "type": "object",
          "properties": {
            "live": {
              "type": "boolean",
              "default": true,
              "description": "Show live MLB games"
            },
            "recent": {
              "type": "boolean",
              "default": true,
              "description": "Show recently completed MLB games"
            },
            "upcoming": {
              "type": "boolean",
              "default": true,
              "description": "Show upcoming MLB games"
            }
          },
          "additionalProperties": false
        },
        "recent_games_to_show": {
          "type": "integer",
          "default": 5,
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum number of recent MLB games to display"
        },
        "upcoming_games_to_show": {
          "type": "integer",
          "default": 10,
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum number of upcoming MLB games to display"
        }
      },
      "additionalProperties": false
    },
    "milb": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable MiLB games"
        },
        "favorite_teams": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[A-Z]{2,4}$",
            "description": "MiLB team abbreviation (e.g., 'DUR', 'SWB')"
          },
          "uniqueItems": true,
          "maxItems": 120,
          "description": "List of favorite MiLB teams to prioritize"
        },
        "display_modes": {
          "type": "object",
          "properties": {
            "live": {
              "type": "boolean",
              "default": true,
              "description": "Show live MiLB games"
            },
            "recent": {
              "type": "boolean",
              "default": true,
              "description": "Show recently completed MiLB games"
            },
            "upcoming": {
              "type": "boolean",
              "default": true,
              "description": "Show upcoming MiLB games"
            }
          },
          "additionalProperties": false
        },
        "recent_games_to_show": {
          "type": "integer",
          "default": 5,
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum number of recent MiLB games to display"
        },
        "upcoming_games_to_show": {
          "type": "integer",
          "default": 10,
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum number of upcoming MiLB games to display"
        }
      },
      "additionalProperties": false
    },
    "ncaa_baseball": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable NCAA Baseball games"
        },
        "favorite_teams": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[A-Z]{2,4}$",
            "description": "NCAA Baseball team abbreviation (e.g., 'LSU', 'FLA')"
          },
          "uniqueItems": true,
          "maxItems": 300,
          "description": "List of favorite NCAA Baseball teams to prioritize"
        },
        "display_modes": {
          "type": "object",
          "properties": {
            "live": {
              "type": "boolean",
              "default": true,
              "description": "Show live NCAA Baseball games"
            },
            "recent": {
              "type": "boolean",
              "default": true,
              "description": "Show recently completed NCAA Baseball games"
            },
            "upcoming": {
              "type": "boolean",
              "default": true,
              "description": "Show upcoming NCAA Baseball games"
            }
          },
          "additionalProperties": false
        },
        "recent_games_to_show": {
          "type": "integer",
          "default": 5,
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum number of recent NCAA Baseball games to display"
        },
        "upcoming_games_to_show": {
          "type": "integer",
          "default": 10,
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum number of upcoming NCAA Baseball games to display"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "required": ["enabled"]
}
