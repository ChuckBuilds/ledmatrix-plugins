{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Football Scoreboard Plugin Configuration",
  "description": "Configuration schema for the Football Scoreboard plugin",
  "type": "object",
  "properties": {
    "enabled": {
      "type": "boolean",
      "default": true,
      "description": "Enable or disable the football scoreboard plugin"
    },
    "display_duration": {
      "type": "number",
      "default": 15,
      "minimum": 5,
      "maximum": 60,
      "description": "Duration in seconds to display each game"
    },
    "show_records": {
      "type": "boolean",
      "default": false,
      "description": "Show team records (wins-losses)"
    },
    "show_ranking": {
      "type": "boolean",
      "default": false,
      "description": "Show team rankings (when available)"
    },
    "update_interval_seconds": {
      "type": "integer",
      "default": 60,
      "minimum": 30,
      "maximum": 300,
      "description": "How often to fetch new data (seconds)"
    },
    "nfl": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable NFL games"
        },
        "favorite_teams": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[A-Z]{2,3}$",
            "description": "NFL team abbreviation (e.g., 'TB', 'DAL')"
          },
          "uniqueItems": true,
          "maxItems": 32,
          "description": "List of favorite NFL teams to prioritize"
        },
        "display_modes": {
          "type": "object",
          "properties": {
            "live": {
              "type": "boolean",
              "default": true,
              "description": "Show live NFL games"
            },
            "recent": {
              "type": "boolean",
              "default": true,
              "description": "Show recently completed NFL games"
            },
            "upcoming": {
              "type": "boolean",
              "default": true,
              "description": "Show upcoming NFL games"
            }
          },
          "additionalProperties": false
        },
        "recent_games_to_show": {
          "type": "integer",
          "default": 5,
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum number of recent NFL games to display"
        },
        "upcoming_games_to_show": {
          "type": "integer",
          "default": 10,
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum number of upcoming NFL games to display"
        }
      },
      "additionalProperties": false
    },
    "ncaa_fb": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable NCAA Football games"
        },
        "favorite_teams": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[A-Z]{2,3}$",
            "description": "NCAA FB team abbreviation (e.g., 'UGA', 'AUB')"
          },
          "uniqueItems": true,
          "maxItems": 130,
          "description": "List of favorite NCAA FB teams to prioritize"
        },
        "display_modes": {
          "type": "object",
          "properties": {
            "live": {
              "type": "boolean",
              "default": true,
              "description": "Show live NCAA FB games"
            },
            "recent": {
              "type": "boolean",
              "default": true,
              "description": "Show recently completed NCAA FB games"
            },
            "upcoming": {
              "type": "boolean",
              "default": true,
              "description": "Show upcoming NCAA FB games"
            }
          },
          "additionalProperties": false
        },
        "recent_games_to_show": {
          "type": "integer",
          "default": 5,
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum number of recent NCAA FB games to display"
        },
        "upcoming_games_to_show": {
          "type": "integer",
          "default": 10,
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum number of upcoming NCAA FB games to display"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "required": ["enabled"]
}
