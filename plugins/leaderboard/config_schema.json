{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Leaderboard Plugin Configuration",
  "description": "Configuration schema for the Sports Leaderboard plugin",
  "type": "object",
  "properties": {
    "enabled": {
      "type": "boolean",
      "default": true,
      "description": "Enable or disable the leaderboard plugin"
    },
    "global": {
      "type": "object",
      "properties": {
        "display_duration": {
          "type": "number",
          "default": 30,
          "minimum": 10,
          "maximum": 300,
          "description": "Duration in seconds to display the leaderboard"
        },
        "update_interval_seconds": {
          "type": "integer",
          "default": 3600,
          "minimum": 300,
          "maximum": 86400,
          "description": "How often to fetch new leaderboard data (seconds)"
        },
        "scroll_speed": {
          "type": "number",
          "default": 2,
          "minimum": 0.5,
          "maximum": 10,
          "description": "Scrolling speed multiplier"
        },
        "scroll_delay": {
          "type": "number",
          "default": 0.01,
          "minimum": 0.001,
          "maximum": 0.1,
          "description": "Delay between scroll steps in seconds"
        },
        "dynamic_duration": {
          "type": "boolean",
          "default": true,
          "description": "Enable dynamic duration based on content width"
        },
        "min_duration": {
          "type": "integer",
          "default": 30,
          "minimum": 10,
          "maximum": 300,
          "description": "Minimum display duration when dynamic duration is enabled"
        },
        "max_duration": {
          "type": "integer",
          "default": 300,
          "minimum": 30,
          "maximum": 600,
          "description": "Maximum display duration when dynamic duration is enabled"
        },
        "loop": {
          "type": "boolean",
          "default": true,
          "description": "Continuously loop the leaderboard"
        },
        "background_service": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable background data fetching"
            },
            "request_timeout": {
              "type": "integer",
              "default": 30,
              "minimum": 10,
              "maximum": 120,
              "description": "Request timeout in seconds"
            },
            "max_retries": {
              "type": "integer",
              "default": 3,
              "minimum": 1,
              "maximum": 10,
              "description": "Maximum number of retries for failed requests"
            },
            "priority": {
              "type": "integer",
              "default": 2,
              "minimum": 1,
              "maximum": 5,
              "description": "Priority for background requests (1=highest, 5=lowest)"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "leagues": {
      "type": "object",
      "properties": {
        "nfl": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable NFL standings"
            },
            "conference": {
              "type": "string",
              "enum": ["both", "afc", "nfc"],
              "default": "both",
              "description": "NFL conference to display"
            },
            "division": {
              "type": "string",
              "enum": ["all", "east", "west", "north", "south"],
              "default": "all",
              "description": "NFL division to display"
            }
          },
          "additionalProperties": false
        },
        "nba": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable NBA standings"
            },
            "conference": {
              "type": "string",
              "enum": ["both", "east", "west"],
              "default": "both",
              "description": "NBA conference to display"
            }
          },
          "additionalProperties": false
        },
        "mlb": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable MLB standings"
            },
            "league": {
              "type": "string",
              "enum": ["both", "american", "national"],
              "default": "both",
              "description": "MLB league to display"
            },
            "division": {
              "type": "string",
              "enum": ["all", "east", "central", "west"],
              "default": "all",
              "description": "MLB division to display"
            }
          },
          "additionalProperties": false
        },
        "ncaa_fb": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable NCAA Football rankings"
            },
            "division": {
              "type": "string",
              "enum": ["fbs", "fcs"],
              "default": "fbs",
              "description": "NCAA Football division to display"
            },
            "show_rankings": {
              "type": "boolean",
              "default": true,
              "description": "Show NCAA Football rankings instead of standings"
            }
          },
          "additionalProperties": false
        },
        "ncaam_basketball": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable NCAA Men's Basketball rankings"
            },
            "show_rankings": {
              "type": "boolean",
              "default": true,
              "description": "Show NCAA Men's Basketball rankings instead of standings"
            }
          },
          "additionalProperties": false
        },
        "ncaaw_basketball": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable NCAA Women's Basketball rankings"
            },
            "show_rankings": {
              "type": "boolean",
              "default": true,
              "description": "Show NCAA Women's Basketball rankings instead of standings"
            }
          },
          "additionalProperties": false
        },
        "nhl": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable NHL standings"
            },
            "conference": {
              "type": "string",
              "enum": ["both", "east", "west"],
              "default": "both",
              "description": "NHL conference to display"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "required": ["enabled"]
}
